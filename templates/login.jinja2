            $.ajax({
                type: "POST",
                url: "/api/register",
                data: {
                    id_give: username,
                    pw_give: password,
                },
                success: function (response) {
                    alert("You are registered! Nice!");
                    window.location.replace("/login");
                },
            });
        }
    </script>
</body>

</html>